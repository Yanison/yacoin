<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- =================%%fix below%%================== -->
<mapper namespace="com.yanison.infra.modules.boardservice.BoardMapper">
<!-- ================================%%fix below%%================== -->							
    <resultMap id="resultMapObj" type="com.yanison.infra.modules.boardservice.BoardVo"></resultMap>
  
    <select id="selectList" resultMap="resultMapObj">
    	select empid,ename,dname 
    	
    	from emp e left join dept d on e.dept = d.deptid order by ename
    	
    	LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
    </select>
    
    
    
    <select id="selectCnt" resultMap="resultMapObj" resultType="int">
    	select count(*) from emp
    </select>

</mapper>